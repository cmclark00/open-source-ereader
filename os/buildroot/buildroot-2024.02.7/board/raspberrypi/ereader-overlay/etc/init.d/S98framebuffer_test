#!/bin/sh
#
# Framebuffer test - displays messages on screen
#

DAEMON="framebuffer_test.py"
PIDFILE="/var/run/$DAEMON.pid"

start() {
    echo "Starting framebuffer test..."
    start-stop-daemon -S -b -m -p "$PIDFILE" -x /usr/bin/framebuffer_test.py
    echo "Framebuffer test started"
}

stop() {
    echo "Stopping framebuffer test..."
    start-stop-daemon -K -p "$PIDFILE"
    rm -f "$PIDFILE"
    echo "Framebuffer test stopped"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        sleep 1
        start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
