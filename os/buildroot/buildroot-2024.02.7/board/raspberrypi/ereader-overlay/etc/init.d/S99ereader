#!/bin/sh

case "$1" in
  start)
    echo "Starting E-Reader Application..."
    # Wait for drivers/modules if needed
    sleep 2
    # Run the application
    cd /app
    python3 main.py &
    ;;
  stop)
    echo "Stopping E-Reader Application..."
    killall python3
    ;;
  restart|reload)
    "$0" stop
    "$0" start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac

exit $?
